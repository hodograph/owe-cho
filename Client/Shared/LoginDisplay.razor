@inject NavigationManager Navigation

<MudStack Row="true" AlignItems="AlignItems.Center">
    <MudButton class="nav-link btn btn-link" @onclick="EditProfile" StartIcon="@Icons.Material.Filled.Person">@CurrentUser?.DisplayName</MudButton>
    <MudButton class="nav-link btn btn-link" @onclick="BeginLogOut">Log out</MudButton>
</MudStack>


@code{
    [CascadingParameter]
    public User CurrentUser { get; set; }

    public void BeginLogOut()
    {
        Navigation.NavigateTo("/.auth/logout");
    }

    public void EditProfile()
    {
        Navigation.NavigateTo("/Profile");
    }
}
